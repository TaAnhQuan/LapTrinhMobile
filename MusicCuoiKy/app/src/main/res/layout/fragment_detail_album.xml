<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.FragmentDetailAlbum">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/imgAlbum"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_centerHorizontal="true"
                android:background="@drawable/ic_music_default" />

            <TextView
                android:id="@+id/tv_Album"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_above="@+id/tv_Artist"
                android:layout_marginLeft="10dp"
                android:singleLine="true"
                android:text="Tên bài hát"
                android:textColor="@color/white"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/tv_Artist"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/imgAlbum"
                android:layout_marginLeft="10dp"
                android:layout_marginBottom="15dp"
                android:singleLine="true"
                android:text="Tên nghệ sĩ"
                android:textColor="@color/white" />


            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rcvSongForAlbum"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/imgAlbum" />
        </RelativeLayout>
    </ScrollView>
</LinearLayout>